{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-react-hooks"
  ],
  "linterOptions": {
    "exclude": [
      "config/*.js",
      "config/**/*.js",
      "node_modules/**/*.ts",
      "src/i18n/en.ts",
      "src/i18n/cs.ts"
    ]
  },
  "rules": {
    "ordered-imports": false,
    "interface-name": false,
    "member-ordering": false,
    "object-literal-sort-keys": false,
    "quotemark": {
      "options": ["double"],
      "severity": "warning"
    },
    "no-empty-interface": false,
    //    "no-console": false,
    "max-classes-per-file": false,
    "no-bitwise": false,
    "jsx-no-lambda": false
  }
}
